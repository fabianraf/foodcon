<div class="shell">
  <!-- Small Nav -->
  <div class="small-nav">
    <a href="#">Dashboard</a>
    <span>&gt;</span>
    Programas
  </div>
  <!-- End Small Nav -->
  <br />
  <!-- Main -->
  <div id="main">
    <div class="cl">&nbsp;</div>

    <!-- Content -->
    <div id="content">
      <!-- Box -->
      <div class="box">
        <!-- Box Head -->
        <div class="box-head">
          <h2 class="left">Programas</h2>
          <div class="right">
            <label>buscar programa</label>
            <input type="text" class="field small-field" />
            <input type="submit" class="button" value="search" />
          </div>
        </div>
        <!-- End Box Head -->	
          <!-- Table -->
          <div class="table">
            <table width="100%" border="0" cellspacing="0" cellpadding="0">
              <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th width="13">En Homepage?</th>
                <th width="110" class="ac">Content Control</th>
              </tr>
              <% @programs.each do |program| %>
                <%= content_tag_for(:tr, program, :class=> "#{cycle("", "odd")}") do %>
                  <td><h3><%= link_to program.name, admin_program_path(program) %></td>
                  <td><%= program.price %></td>
                  <td class="status" id="td_program_id_<%= program.id %>">
                   <% if program.is_present_in_homepage? %>
                    <%= link_to "activate", update_status_admin_program_path(program), :method => :put,
                       :class => 'action-activate', :title => 'Estado: Activo. Click para desactivar.', :remote => true
                    %>
                   <% else %>
                      <%= link_to "de-activate", update_status_admin_program_path(program), :method => :put,
                       :class => 'action-deactivate', :title => 'Estado: Inactivo. Click para activar.', :remote => true
                      %>
                   <% end %>
                  </td>
                  <td>
                    <%= link_to 'Borrar', admin_program_path(program), :confirm => 'Are you sure?', :method => :delete, :class => 'ico del', :title => 'Borrar programa'%>
                    <%= link_to 'Editar', edit_admin_program_path(program), :class => 'ico edit', :title => 'Editar programa' %>
                  </td>
                <% end %>
              <% end %>
            </table>

            <!-- Pagging -->
            <div class="pagging">
              <%= paginate @programs %>
            </div>
            <!-- End Pagging -->
          </div>
          <!-- Table -->
      </div>
      <!-- End Box -->
    </div>
    <!-- End Content -->

    <!-- Sidebar -->
    <div id="sidebar">
      <!-- Box -->
      <div class="box">
        <!-- Box Head -->
        <div class="box-head">
          <h2>Manejo</h2>
        </div>
        <!-- End Box Head-->
        <div class="box-content">
          <%= link_to(content_tag(:span, "AÃ±adir programa"), new_admin_program_path, :class => 'add-button') %>
          <div class="cl">&nbsp;</div>
          <p class="select-all"><input type="checkbox" class="checkbox" /><label>select all</label></p>
          <p><a href="#">Delete Selected</a></p>
          <!-- Sort -->
          <div class="sort">
            <label>Sort by</label>
            <select class="field">
                    <option value="">Title</option>
            </select>
            <select class="field">
                    <option value="">Date</option>
            </select>
            <select class="field">
                    <option value="">Author</option>
            </select>
          </div>
          <!-- End Sort -->
        </div>
      </div>
      <!-- End Box -->
    </div>
    <!-- End Sidebar -->

    <div class="cl">&nbsp;</div>			
  </div>
  <!-- Main -->
</div>