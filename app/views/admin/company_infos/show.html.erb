<!-- Small Nav -->
<div class="small-nav">
        <a href="#">Dashboard</a>
        <span>&gt;</span>
        Información de la Compañía
</div>
<!-- End Small Nav -->

<br />
<!-- Main -->
<div id="main">
        <div class="cl">&nbsp;</div>

        <!-- Content -->
        <div id="content">
          <!-- Box -->
          <div class="box">
            <!-- Box Head -->
            <div class="box-head">
              <h2 class="left"><%= @company_info.title %></h2>
              <div class="right">
                <%= link_to 'Eliminar', admin_company_info_path(@company_info), :confirm => 'Estás seguro?', :method => :delete, :class => 'ico del', :title => 'Eliminar programa'%>
                <%= link_to 'Editar', edit_admin_company_info_path(@company_info), :class => 'ico edit', :title => 'Editar Info.' %>
              </div>
            </div>
            <!-- End Box Head -->
            
            <dl class="show">
          		<dt>Descripción</dt>
          		<dd><%= @company_info.description.html_safe %></p></dd>
          		<% if !@company_info.company_info_image.blank? %>
            		<dt>Image</dt>
            		<dd><%= image_tag(@company_info.company_info_image.attachment.url(:original), :width=>'250px') %></dd>
          		<% end %>
            </dl>
            
          </div>
          <!-- End Box -->
        </div>
        <!-- End Content -->
        <!-- Sidebar -->
        <div id="sidebar">
          <!-- Box -->
          <div class="box">
            <!-- Box Head -->
            <div class="box-head">
              <h2>Management</h2>
            </div>
            <!-- End Box Head-->
            <div class="box-content">
              <%= link_to(content_tag(:span, "Añadir información"), new_admin_program_path, :class => 'add-button') %>
              <div class="cl">&nbsp;</div>
            </div>
          </div>
          <!-- End Box -->
        </div>
        <!-- End Sidebar -->

        <div class="cl">&nbsp;</div>			
</div>
<!-- Main -->
	