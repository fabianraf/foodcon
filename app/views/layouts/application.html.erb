    <% end %>
  <%= javascript_include_tag "foundation.min.js" %>
  <%= javascript_include_tag "application" %>
  <% if controller.controller_name == "homepage" && controller.action_name == "index" %>
    <%= javascript_include_tag "js/jquery-1.7.min.js" %>
    <%= javascript_include_tag "jquery.featureCarousel.js" %>
        <script type="text/javascript">
        $(document).ready(function() {
          var carousel = $("#carousel").featureCarousel({
            // include options like this:
            // (use quotes only for string values, and no trailing comma after last option)
            // option: value,
            // option: value
          });

          $("#but_prev").click(function () {
            carousel.prev();
          });
          $("#but_pause").click(function () {
            carousel.pause();
          });
          $("#but_start").click(function () {
            carousel.start();
          });
          $("#but_next").click(function () {
            carousel.next();
          });
        });
      </script>
    <% end %>
    <%= content_for :page_specific_javascript %>
  </body>
</html>
